{
    "name": "Mnist_LeNet",
    "cuda": true,
    "gpu": 0,
    "dataset": {
        "data_dir": "datasets/"
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "shuffle_data": true,
         "train": {
            "kwargs": {
                "batch_size": 32
            }
        },
        "validation": {
            "split": 0.1,
            "kwargs": {
                "batch_size": 32
            }
        }
    },

    "lr_scheduler_type": "ExponentialLR",
    "lr_scheduler_freq": 1,
    "lr_scheduler": {
            "gamma": 0.8685113737513527
    },
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": "my_loss",
    "metrics": ["my_metric", "my_metric2"],
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved/runs"
    },
    "arch": "MnistModel", 
    "model": {

    }
}
