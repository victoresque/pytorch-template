{
    "name": "pointrend",
    "n_gpu": 1,

    "arch": {
        "type": "Pointrend",
        "args": {}
    },
    "data_loader": {
        "type": "MyDataLoader",
        "args":{
            "data_dir": "D:\\software\\Code\\code-file\\image\\mydata\\test_data",
            "batch_size": 6,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "point_cross_entropy_loss",
    "metrics": [
        "PA", "IOU"
    ],
    "lr_scheduler": {
        "type": "ExponentialLR",
        "args": {
            "gamma": 0.95
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": false
    }
}
